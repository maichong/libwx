{
  "name": "libwx",
  "version": "0.5.1",
  "description": "Weixin sdk for node",
  "main": "lib/index.js",
  "types": "index.d.ts",
  "scripts": {
    "eslint": "eslint --ext .ts,.tsx ./",
    "eslint:fix": "eslint --ext .tsx,.ts --fix ./",
    "prettier": "prettier -l * src/** scss/**",
    "prettier:fix": "prettier --write -l * src/** scss/**",
    "fix": "yarn prettier:fix",
    "tsc": "tsc",
    "tsc-watch": "tsc -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn tsc --noEmit && yarn eslint && yarn prettier"
    }
  },
  "repository": "https://github.com/maichong/libwx",
  "keywords": [
    "weixin",
    "wechat",
    "jssdk"
  ],
  "author": "Liang <liang@maichong.it> (https://github.com/liangxingchen)",
  "license": "MIT",
  "dependencies": {
    "akita": "^0.8.2",
    "hasha": "^5.2.0",
    "lodash": "^4.17.15",
    "string-random": "^0.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@types/lodash": "^4.14.150",
    "@types/node": "12.12.25",
    "@types/sha1": "^1.1.2",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-alloy": "^3.7.1",
    "husky": "^4.2.5",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3"
  }
}
